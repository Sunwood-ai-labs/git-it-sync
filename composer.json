{
    "name": "sunwood-ai-labs/git-it-sync",
    "description": "WordPress plugin to publish markdown files present in a Github repository as posts to WordPress automatically (git-it-sync fork)",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Aakash Chakravarthy",
            "homepage": "https://www.aakashweb.com/"
        }
    ],
    "homepage": "https://github.com/Sunwood-ai-labs/git-it-sync",
    "keywords": ["wordpress", "plugin", "github", "markdown", "git"],
    "require": {
        "php": ">=7.4",
        "erusev/parsedown": "^1.7",
        "symfony/yaml": "^5.1",
        "erusev/parsedown-extra": "^0.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "classmap": []
    },
    "autoload-dev": {
        "psr-4": {
            "GitItWrite\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage --coverage-clover coverage/clover.xml"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
