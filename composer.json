{
    "require": {
        "php": ">=7.4",
        "erusev/parsedown": "^1.7",
        "symfony/yaml": "^5.1",
        "erusev/parsedown-extra": "^0.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "classmap": [
            "includes/",
            "admin/"
        ],
        "files": [
            "git-it-write.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "GitItWrite\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage --coverage-clover coverage/clover.xml"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
